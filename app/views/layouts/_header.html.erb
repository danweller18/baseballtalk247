<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class= "container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- Be sure to leave the brand out there if you want it shown -->
      <%= link_to "Baseball Talk 24/7", root_path, id: "logo" %>

      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
      <!-- .nav, .navbar-search, .navbar-form, etc -->
        <nav>
          <ul class="nav pull-right">
            <li><%= link_to "Bat Reviews",      bats_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
            <% if admin_signed_in? %>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Edit Account", edit_admin_registration_path %></li>
              <li><%= link_to "Logout", destroy_admin_session_path, :method => :delete %></li>
            <% else %>
            <% if user_signed_in? %>
              <li><%= link_to "Edit Account", edit_user_registration_path %></li>
              <li><%= link_to "View Profile", current_user %></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Sign in", new_user_session_path %></li>
            <% end %>
            <% end %>
          </ul>
        </nav>
      </div>
      <!-- End of nav responsiveness -->

    </div>
  </div>
</header>
