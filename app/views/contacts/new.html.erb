<% provide(:title, 'Contact') %>
<div align="center">
  <h3>Contact Us</h3></br>
  <p>If you have any questions, comments, or suggestions, feel free to send us an email.</p>

  <div class= "contact">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :message, :as => :text, :required => true %>
    <div class="hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-info" %>
    </div>
  <% end %>
  </div>
</div>
