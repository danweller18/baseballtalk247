<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <h3>Pros</h3>200 characters max
    <%= f.text_area :pros, placeholder: "Compose new micropost..." %>
    <h3>Cons</h3>200 characters max
    <%= f.text_area :cons, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
